{
  "name": "weird-salads-inventory",
  "version": "1.0.0",
  "description": "Inventory management system for Weird Salads restaurant chain",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "import-data": "ts-node src/utils/importData.ts",
    "test": "mocha -r ts-node/register 'src/tests/**/*.test.ts'",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm test",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "setup": "npm run import-data"
  },
  "keywords": [
    "inventory",
    "restaurant",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "csv-parser": "^3.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.15",
    "typescript": "^5.0.4",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.0",
    "@types/sinon": "^10.0.14",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1"
  }
}
